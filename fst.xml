<?xml version="1.0" encoding="UTF-8"?>
<project name="fst" default="all">
  
  
  <property file="fst.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.ftl"/>
  </patternset>
  
  
  <!-- Modules -->
  <!-- Module FST -->
  
  <dirname property="module.fst.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.fst" value="${compiler.args}"/>
  
  <property name="fst.output.dir" value="${module.fst.basedir}/out/production/FST"/>

  <path id="fst.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="fst.module.production.classpath">
  </path>

  <path id="fst.runtime.production.module.classpath">
    <pathelement location="${fst.output.dir}"/>
  </path>

  <path id="fst.module.classpath">
    <pathelement location="${fst.output.dir}"/>
  </path>
  
  <path id="fst.runtime.module.classpath">
    <pathelement location="${fst.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.fst">
    <patternset refid="ignored.files"/>
  </patternset>

  <patternset id="excluded.from.compilation.fst">
    <patternset refid="excluded.from.module.fst"/>
  </patternset>

  <path id="fst.module.sourcepath">
    <dirset dir="${module.fst.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.fst" depends="compile.module.fst.production,compile.module.fst.tests" description="Compile module FST"/>
  
  <target name="compile.module.fst.production" description="Compile module FST; production classes">
    <mkdir dir="${fst.output.dir}"/>
    <javac destdir="${fst.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.fst}"/>
      <bootclasspath refid="fst.module.bootclasspath"/>
      <classpath refid="fst.module.production.classpath"/>
      <src refid="fst.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.fst"/>
    </javac>
    
    <copy todir="${fst.output.dir}">
      <fileset dir="${module.fst.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.fst.basedir}/test/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.fst.tests" depends="compile.module.fst.production" description="compile module FST; test classes" unless="skip.tests"/>
  
  <target name="clean.module.fst" description="cleanup module">
    <delete dir="${fst.output.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.fst" description="cleanup all">
      <deltree dir="${module.fst.basedir}/build" />
  </target>
  
  <target name="build.modules" depends="init, clean, compile.module.fst" description="build all modules">
      <jar basedir="${fst.output.dir}" file="./build/fst-${version}.jar" />
      <jar basedir="${module.fst.basedir}/src" file="./build/fst-${version}-src.jar" />
      <jar basedir="${module.fst.basedir}/test" file="./build/fst-${version}-src-test-benchmarks.jar" />
  </target>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>